generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Message {
  id           String   @id
  chatId       BigInt
  chatType     String
  senderId     Int?
  senderName   String?
  senderUsername String?
  text         String?
  attachments  Json?
  timestamp    DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  tasks        Task[]   @relation("MessageTasks")
  materials    Material[]
}

model Task {
  id               String      @id @default(cuid())
  chatId           BigInt
  title            String
  description      String?
  dueDate          DateTime?
  assigneeId       Int?
  assigneeName     String?
  sourceMessageId  String
  createdByUserId  Int?
  createdByName    String?
  status           String      @default("open")
  priority         String      @default("medium")
  createdAt        DateTime    @default(now())
  updatedAt        DateTime    @updatedAt

  message          Message     @relation("MessageTasks", fields: [sourceMessageId], references: [id], onDelete: Cascade)
  reminders        Reminder[]

  @@unique([sourceMessageId, title])
}

model Reminder {
  id         String   @id @default(cuid())
  taskId     String
  remindAt   DateTime
  userId     Int?
  delivered  Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  task       Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
}

model UserPreference {
  userId                Int      @id
  timezone              String   @default("Europe/Moscow")
  reminderOffsetMinutes Int      @default(120)
  quietHours            Json?
  digestScheduleCron    String?  // e.g. "0 9 * * 1" – каждая неделя
  selectedChatId        BigInt?  // Выбранный чат для работы
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
}

model UserChat {
  id          String   @id @default(cuid())
  userId      Int
  chatId      BigInt
  chatTitle   String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([userId, chatId])
  @@index([userId])
}

model DigestLog {
  id           String   @id @default(cuid())
  chatId       BigInt
  generatedFor DateTime
  from         DateTime
  to           DateTime
  summary      String
  createdBy    Int?
  createdAt    DateTime @default(now())
}

model Material {
  id          String   @id @default(cuid())
  chatId      BigInt
  title       String
  link        String?
  messageId   String
  type        String?  // "image" | "file" | "video" | "share"
  fileName    String?
  fileType   String?
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  message     Message  @relation(fields: [messageId], references: [id], onDelete: Cascade)
}
